<h2>Pets</h2>
<% @pets.each do |pet| %>
  <p><%= pet.name %></p>
  <% if @approved == nil %>
    <p><%= button_to "Approve #{pet.name}", "/admin/applications/#{@application.id}", method: :get, params: {approve: true}%></p>
    <p><%= button_to "Reject #{pet.name}", "/admin/applications/#{@application.id}", method: :get, params: {approve: false} %></p>
  <% elsif @approved == true %>
    <p>Approved</p>
  <% elsif @approved == false %>
    <p>Rejected</p>
  <% end %>
<% end %>
