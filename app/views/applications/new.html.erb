<%= form_with url: "/applications", method: :post, local: true do |form| %>
  <%= form.label :name, "Name" %>
  <%= form.text_field :name %>

  <%= form.label "Street Address" %>
  <%= form.text_field :street_address %>

  <%= form.label "City" %>
  <%= form.text_field :city %>

  <%= form.label :state %>
  <%= form.text_field :state %>

  <%= form.label "Zip Code" %>
  <%= form.text_field :zipcode %>

  <%= form.label "Why would you make a good home?" %>
  <%= form.text_field :description %>

  <%= form.submit "Submit" %>
<% end %>
